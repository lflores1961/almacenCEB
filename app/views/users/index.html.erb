
<h1>Usuarios</h1>


<div class="index-division">
  <table class="index-table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Email</th>
        <th>Nivel</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.access_level %></td>
          <td><%= link_to 'Show', user, class: "btn info" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn info" %></td>
          <td><%= link_to 'Destroy', user, class: "btn info", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


 <br>

 <%= link_to 'Usuario Nuevo', new_user_path, class: "btn-lg success" %>

<% content_for :footer do %>
  <p id="notice"><%= notice %>
<% end %>
